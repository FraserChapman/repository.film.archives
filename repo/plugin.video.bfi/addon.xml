<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.bfi" name="BFI Player" version="1.2.0" provider-name="fraser">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.routing" version="0.2.0"/>
        <import addon="script.module.beautifulsoup4" version="4.3.2"/>
        <import addon="script.module.requests" version="2.12.4"/>
        <import addon="script.module.cache" version="1.0.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Search and play free movies and shorts from the BFI collection</summary>
        <description lang="en_GB">Showing the best from the BFI, national and regional archives - including 120 years of Britain on film.</description>
        <language>en</language>
        <platform>all</platform>
        <license>MIT</license>
        <forum>https://forum.kodi.tv/showthread.php?tid=331302</forum>
        <website>https://player.bfi.org.uk/free</website>
        <email>fraser.chapman@gmail.com</email>
        <source>https://github.com/FraserChapman/plugin.video.bfi</source>
        <news>v1.2.0 (21-7-19) - Updated "The Cut" to include extra videos</news>
        <disclaimer lang="en_GB">>Neither this addon nor its author are in anyway affiliated with the British Film Institute</disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/media/ss1.jpg</screenshot>
            <screenshot>resources/media/ss2.jpg</screenshot>
            <screenshot>resources/media/ss3.jpg</screenshot>
            <screenshot>resources/media/ss4.jpg</screenshot>
            <screenshot>resources/media/ss5.jpg</screenshot>
            <screenshot>resources/media/ss6.jpg</screenshot>
        </assets>
    </extension>
</addon>
