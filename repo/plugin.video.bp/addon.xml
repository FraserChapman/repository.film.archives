<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.bp" name="British Pathé" version="1.0.0" provider-name="fraser">
    <requires>
        <import addon="xbmc.python" version="2.26.0"/>
        <import addon="script.module.routing" version="0.2.0"/>
        <import addon="script.module.beautifulsoup4" version="4.3.2"/>
        <import addon="script.module.requests" version="2.12.4"/>
        <import addon="script.module.cache" version="1.0.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Search and play free content from British Pathé and the Reuters historical collection
        </summary>
        <description lang="en_GB">British Pathé is considered to be the finest newsreel archive in the world and is a treasure trove of 85,000 films unrivalled in their historical and cultural significance.
British Pathé also represents the Reuters historical collection, which includes more than 120,000 items from Reuters-owned news agencies.
        </description>
        <language>en</language>
        <platform>all</platform>
        <license>MIT</license>
        <forum></forum>
        <website>https://www.britishpathe.com/</website>
        <email>fraser.chapman@gmail.com</email>
        <source>https://github.com/FraserChapman/plugin.video.bp</source>
        <news>v1.0.0 (5-7-19) - Initial version</news>
        <disclaimer lang="en_GB">Neither this addon nor its author are in anyway affiliated with British Pathé or Reuters
        </disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/media/ss1.jpg</screenshot>
            <screenshot>resources/media/ss2.jpg</screenshot>
            <screenshot>resources/media/ss3.jpg</screenshot>
            <screenshot>resources/media/ss4.jpg</screenshot>
            <screenshot>resources/media/ss5.jpg</screenshot>
        </assets>
    </extension>
</addon>
