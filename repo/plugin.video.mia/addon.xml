<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.mia" name="Moving Image Archive" version="1.0.0" provider-name="fraser">
    <requires>
        <import addon="xbmc.python" version="2.26.0"/>
        <import addon="script.module.routing" version="0.2.0"/>
        <import addon="script.module.beautifulsoup4" version="4.3.2"/>
        <import addon="script.module.requests" version="2.12.4"/>
        <import addon="script.module.cache" version="1.0.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Search and play free content from National Library of Scotland Moving Image Archive</summary>
        <description lang="en_GB">The Moving Image Archive is Scotland's national collection of moving image and is held at the National Library.
You can watch over 2,000 clips and full-length films from the collection on the Moving Image Archive catalogue.
        </description>
        <language>en</language>
        <platform>all</platform>
        <license>MIT</license>
        <forum>https://forum.kodi.tv/showthread.php?tid=345272</forum>
        <website>https://movingimage.nls.uk/</website>
        <email>fraser.chapman@gmail.com</email>
        <source>https://github.com/FraserChapman/plugin.video.mia</source>
        <news>v1.0.0 (8-7-19) - Initial version</news>
        <disclaimer lang="en_GB">Neither this addon nor its author are in anyway affiliated with National Library of Scotland Moving Image Archive</disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/media/ss1.jpg</screenshot>
            <screenshot>resources/media/ss2.jpg</screenshot>
            <screenshot>resources/media/ss3.jpg</screenshot>
            <screenshot>resources/media/ss4.jpg</screenshot>
            <screenshot>resources/media/ss5.jpg</screenshot>
        </assets>
    </extension>
</addon>
